    "@testing-library/react": "^11.2.6",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-dom": "^17.0.3",
